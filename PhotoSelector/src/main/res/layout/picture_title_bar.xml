<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/head_bar_height"
    android:orientation="horizontal"
    android:background="#393a3e">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/picture_icon_back" />

    <LinearLayout
        android:id="@+id/album_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/dir_title"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="8"
            android:maxLines="1"
            android:text="@string/picture_camera_roll"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            />

        <ImageView
            android:id="@+id/arrow_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_down" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       />
    <TextView
        android:id="@+id/select_done"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:text="@string/picture_select_done"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>

